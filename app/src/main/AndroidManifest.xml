<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baliguideicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baliguideiconwhsmall"
        android:supportsRtl="true"
        android:theme="@style/Theme.Baliguideapp"
        tools:targetApi="31">
        <activity
            android:name=".ui.boarding.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Baliguideapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.tourism.TourismActivity"
            android:exported="false" />
        <activity
            android:name=".ui.souvenir.SouvenirActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hotel.HotelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.culinary.CulinaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cafe.CafeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.homepage.HomepageActivity"
            android:exported="false"
            android:label="@string/title_activity_homepage"
            android:theme="@style/Theme.Baliguideapp.NoActionBar" />
        <activity
            android:name=".ui.homepage.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Baliguideapp.NoActionBar" />
        <activity
            android:name=".ui.boarding.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Baliguideapp.NoActionBar">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Baliguideapp.NoActionBar" />
    </application>

</manifest>